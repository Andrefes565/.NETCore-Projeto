@model X.PagedList.IPagedList<site01.Models.Palavra>
@using X.PagedList;
@using X.PagedList.Mvc.Core;

    <link href="/css/PagedList.css" rel="stylesheet" type="text/css" />

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Palavra - Listagem";
}



@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Mensagem"]
    </div>
}

<a href="/Palavra/Cadastrar" class="btn btn-primary">Cadastrar</a>
<span>Total de Registros: @Model.TotalItemCount</span>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Palavra</th>
            <th scope="col">Nível</th>
            <th scope="col">Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var palavra in Model)
        {
            <tr>
                <th scope="row">@palavra.Id</th>
                <td>@palavra.Nome</td>
                <td>@palavra.Nivel</td>
                <td>
                    <a href="/Palavra/Atualizar/@palavra.Id" class="btn btn-secondary">Editar</a>
                    <a href="/Palavra/Excluir/@palavra.Id" class="btn btn-secondary">Excluir</a>
                </td>
            </tr>
        }


    </tbody>
</table>

@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
