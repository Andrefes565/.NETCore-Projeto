@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Login";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-error" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<form method="post" action="/Home/Login">
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" name="email" value="" class="form-control" id="nome" placeholder="Digite seu email">
        @Html.ValidationMessage("email")
    </div>
    <div class="form-group">
        <label for="nome">Senha</label>
        <input type="password" name="senha" value="" class="form-control" id="senha" placeholder="Digite sua senha">
        @Html.ValidationMessage("senha")
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
@ViewBag.Mensagem


