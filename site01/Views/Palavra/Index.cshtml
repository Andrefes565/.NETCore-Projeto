@model List<site01.Models.Palavra>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Listagem</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
   
<body>

    
    <div class="container">
        <a href="/Palavra/Cadastrar" class="btn btn-primary">Cadastrar</a>
        <span>Total de Registros: @Model.Count</span>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Palavra</th>
                    <th scope="col">Nível</th>
                    <th scope="col">Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var palavra in Model)
                {
                    <tr>
                        <th scope="row">@palavra.Id</th>
                        <td>@palavra.Nome</td>
                        <td>@palavra.Nivel</td>
                        <td>
                            <a href="/Palavra/Atualizar/@palavra.Id" class="btn btn-secondary">Editar</a>
                            <a href="/Palavra/Excluir/@palavra.Id" class="btn btn-secondary">Excluir</a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</body>
</html>
